<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.hindu.cunow.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_profile"
            app:destination="@id/navigation_profile" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.hindu.cunow.Fragments.ExploreFragment"
        tools:layout="@layout/explore_fragment" >
        <action
            android:id="@+id/action_navigation_dashboard_to_confessionRoomFragment"
            app:destination="@id/confessionRoomFragment" />

        <action
            android:id="@+id/action_navigation_dashboard_to_navigation_profile"
            app:destination="@id/navigation_profile" />
        <action
            android:id="@+id/action_navigation_dashboard_to_userProfile"
            app:destination="@id/userProfile" />
    </fragment>

    <fragment
        android:id="@+id/navigation_addPost"
        android:name="com.hindu.cunow.Fragments.CreatePostFragment"
        tools:layout="@layout/create_post_fragment" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.hindu.cunow.ui.notifications.NotificationsFragment"
        tools:layout="@layout/fragment_notifications" >
        <action
            android:id="@+id/action_navigation_notifications_to_followRequest2"
            app:destination="@id/followRequest2" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.hindu.cunow.Fragments.ProfileFragment"
        tools:layout="@layout/profile_fragment" >
        <action
            android:id="@+id/action_navigation_profile_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
        <action
            android:id="@+id/action_navigation_profile_to_myCirclesFragment"
            app:destination="@id/myCirclesFragment" />
        <action
            android:id="@+id/action_navigation_profile_to_myPostsFragemt"
            app:destination="@id/myPostsFragemt" />
    </fragment>
    <fragment
        android:id="@+id/confessionRoomFragment"
        android:name="com.hindu.cunow.Fragments.ConfessionRoom.ConfessionRoomFragment"
        android:label="confession_room_fragment"
        tools:layout="@layout/confession_room_fragment" >
        <action
            android:id="@+id/action_confessionRoomFragment_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
    </fragment>

    <fragment
        android:id="@+id/circleDetails"
        android:name="com.hindu.cunow.Fragments.CircleDetails.CircleDetails"
        android:label="circle_details_fragment"
        tools:layout="@layout/circle_details_fragment" >

        <action
            android:id="@+id/action_circleDetails_to_exploreCirclesFragments2"
            app:destination="@id/exploreCirclesFragments2" />
    </fragment>
    <fragment
        android:id="@+id/userProfile"
        android:name="com.hindu.cunow.Fragments.UserProfile"
        android:label="fragment_user_profiel"
        tools:layout="@layout/fragment_user_profiel" />
    <fragment
        android:id="@+id/followRequest2"
        android:name="com.hindu.cunow.Fragments.FollowRequest.FollowRequest"
        android:label="follow_request_fragment"
        tools:layout="@layout/follow_request_fragment" >
        <action
            android:id="@+id/action_followRequest2_to_navigation_notifications"
            app:destination="@id/navigation_notifications" />
    </fragment>

    <fragment
        android:id="@+id/myCirclesFragment"
        android:name="com.hindu.cunow.Fragments.Circle.MyCircles.MyCirclesFragment"
        android:label="my_circles_fragment"
        tools:layout="@layout/my_circles_fragment" />

    <fragment
        android:id="@+id/myPostsFragemt"
        android:name="com.hindu.cunow.Fragments.AboutMe.Posts.MyPostsFragemt"
        android:label="my_posts_fragemt_fragment"
        tools:layout="@layout/my_posts_fragemt_fragment" />
    <fragment
        android:id="@+id/exploreCirclesFragments2"
        android:name="com.hindu.cunow.Fragments.Circle.ExploreCircles.ExploreCirclesFragments"
        android:label="explore_circles_fragments_fragment"
        tools:layout="@layout/explore_circles_fragments_fragment" >
        <action
            android:id="@+id/action_exploreCirclesFragments2_to_circleDetails"
            app:destination="@id/circleDetails" />
    </fragment>


</navigation>