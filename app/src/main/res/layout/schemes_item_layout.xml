<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="7pt">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/scheme_image"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="100dp"
            android:src="@drawable/test_img" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/scheme_image"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/scheme_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/comfortaa"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/vivaMagenta"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/govt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ellipsize="end"
                android:fontFamily="@font/comfortaa"
                android:textColor="@color/red"
                android:maxLines="1"
                android:text="Government of India" />

            <TextView
                android:id="@+id/scheme_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:justificationMode="inter_word"
                android:visibility="gone"
                android:fontFamily="@font/comfortaa"
                android:maxLines="4"
                android:text="@string/lorem_sample"
                android:textColor="@color/black" />


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>