<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardElevation="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/AbroadBack"
            android:layout_width="32dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            app:srcCompat="@drawable/back" />


        <TextView
            android:id="@+id/abroad_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Program Name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/comfortaa"
            android:textSize="18sp"
            android:textColor="@color/red"/>


        <TextView
            android:id="@+id/instituteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Institute Name"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/vivaMagenta"/>



        <TextView
            android:id="@+id/abroad_description"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="this is description of the scheme"
            android:maxLines="4"
            android:ellipsize="end"
            android:justificationMode="inter_word"
            android:layout_margin="10dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/university"/>

                <TextView
                    android:id="@+id/programFor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Program for"
                    android:textSize="11sp"
                    android:maxLength="20"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/placeholder"/>

                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Countryteererereererereeerererereererrer"
                    android:maxLength="20"
                    android:textSize="11sp"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/teacher"/>

                <TextView
                    android:id="@+id/classMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online/Offline"
                    android:maxLength="15"
                    android:textSize="11dp"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>