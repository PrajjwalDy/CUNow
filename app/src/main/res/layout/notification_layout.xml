<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notification_profileImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/profile_testimg" />

        <TextView
            android:id="@+id/usernameNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/notification_profileImage"
            android:fontFamily="@font/amiko"
            android:text="username"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/notificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usernameNotification"
            android:text="liked your post"
            android:layout_toEndOf="@id/notification_profileImage"
            android:maxLines="1"
            android:fontFamily="@font/amiko"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/postImageNotification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/test_img" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>