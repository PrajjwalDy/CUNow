<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/notification_profileImage"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/profile_testimg" />

        <TextView
            android:id="@+id/usernameNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/notification_profileImage"
            android:fontFamily="@font/amiko"
            android:text="username"
            android:textColor="@color/red"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/notificationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@+id/postImageNotification"
            android:layout_toEndOf="@+id/usernameNotification"
            android:maxLines="1"
            android:fontFamily="@font/amiko"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/postImageNotification"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/test_img" />

        <LinearLayout
            android:id="@+id/request_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ignoreRequest_infuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ignore"
                android:layout_margin="5dp"
                android:textColor="@color/vivaMagenta"
                android:fontFamily="@font/comfortaa"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/acceptRequest_infuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accpet"
                android:layout_margin="5dp"
                android:textColor="@color/green"
                android:fontFamily="@font/comfortaa"
                android:textSize="12sp"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>