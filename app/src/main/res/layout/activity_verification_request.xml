<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hindu.joltt.Activity.VerificationRequest">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/Verification_Back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                app:srcCompat= "@drawable/back"/>
            <TextView
                android:id="@+id/verify_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/amiko"
                android:text="Verification"
                android:textColor="@color/red"
                android:textSize="24sp"
                />

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:src="@drawable/pink_vierification"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/amiko"
                    android:text="Conditions regarding Verification request"
                    android:textSize="17dp"
                    android:layout_margin="5dp"
                   />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/star"
                    android:layout_margin="10dp"
                    app:tint="@color/red"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="If you request for verification then your followers should be up to 3k otherwise the request will not be verified."
                    android:fontFamily="@font/amiko"
                    android:textStyle="bold"/>

            </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >


    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:src="@drawable/star"
        android:layout_margin="10dp"
        app:tint="@color/red"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Legal and official documents relating to assets are checked to confirm the ownership of assets."
android:fontFamily="@font/amiko"
    android:layout_margin="5dp"
    android:textStyle="bold"/>
</LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/red"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:text="USER's DATA"
                android:layout_margin="10dp"
                android:fontFamily="@font/amiko"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-10dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="Full NAME as per DOCUMENT"
                    android:textColor="@color/red"
                    android:fontFamily="@font/amiko"
                    />
                <EditText
                    android:id="@+id/edit_TextAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red"
                    android:hint="Someone Example"
                    android:fontFamily="@font/amiko"
                    android:textSize="14dp"/>

            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-10dp"
                android:gravity="center_vertical">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entity"
                        android:textColor="@color/red"
                        android:fontFamily="@font/amiko"
                        />
                    <EditText
                        android:id="@+id/editTextUID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/red"
                        android:hint="Personal Blog, News Agency"
                        android:fontFamily="@font/amiko"
                        android:textSize="14sp"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-10dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valid ID Proof No."
                        android:textColor="@color/red"
                        android:fontFamily="@font/amiko"
                        />
                    <EditText
                        android:id="@+id/editTextAdhaar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/red"
                        android:hint="Adhaar/PAN/Any Valid ID"
                        android:fontFamily="@font/amiko"
                        android:textSize="14sp"/>

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/id_proofImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/image_on_txt"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/proof_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload the ID Proof"
                    android:layout_toEndOf="@+id/id_proofImage"
                    android:layout_centerVertical="true"
                    android:textColor="@color/red"
                    android:textSize="16sp"/>

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/requester_verification"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:text="Request"
                android:layout_margin="10dp"
                android:background="@color/red"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:elevation="5dp"
                android:fontFamily="@font/amiko"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/amiko"
                android:text="H.I.N.D.U Production"
                android:layout_margin="90dp"
                android:textColor="@color/red"
                android:textSize="14sp"
                />






        </LinearLayout>
        </ScrollView>
        </LinearLayout>