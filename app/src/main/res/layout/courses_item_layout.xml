<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:layout_marginTop="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/courseImage_CV"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentEnd="true"
            app:cardCornerRadius="10dp"
            android:visibility="gone"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/courseImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test_img" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/courseImage_CV"
            android:fontFamily="@font/comfortaa"
            android:text="Lorem Ipsum"
            android:textColor="@color/vivaMagenta"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_coursesInstitution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseDescription"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/school"/>

            <TextView
                android:id="@+id/coursePlatform"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 hour"
                android:textColor="@color/red"
                android:fontFamily="@font/comfortaa"
                android:layout_marginStart="5dp"/>



        </LinearLayout>

        <TextView
            android:id="@+id/courseDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseName"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:maxLines="3"
            android:fontFamily="@font/comfortaa"
            android:text="Description"
            android:textColor="@color/red" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_coursesInstitution"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/stopwatch"/>

            <TextView
                android:id="@+id/courseDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 hour"
                android:textColor="@color/red"
                android:fontFamily="@font/comfortaa"
                android:layout_marginStart="5dp"/>



        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>