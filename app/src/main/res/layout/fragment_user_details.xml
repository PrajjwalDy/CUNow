                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/student_course"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:layout_toStartOf="@+id/divider_img_user"
                                android:fontFamily="@font/comfortaa"
                                android:text="Computer Science Engineering"
                                android:textColor="@color/white" />

                            <TextView
                                android:id="@+id/year_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/branch_user"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="5dp"
                                android:fontFamily="@font/amiko"
                                android:text="Year: 2021"
                                android:textAlignment="center"
                                android:textColor="@color/white" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

