    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/location_image">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/locationPin"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="50dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/locationpin" />

        <TextView
            android:id="@+id/from_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locationPin"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="-30dp"
            android:layout_toEndOf="@+id/locationPin"
            android:fontFamily="@font/amiko"
            android:text="Varanasi, Uttar Pradesh,India"
            android:textColor="@color/red"
            android:textSize="14sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/from_users"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/transparent_bg_white"
                android:elevation="5pt"
                android:orientation="vertical">

