<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="7pt">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/event_image_cv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            app:cardCornerRadius="5pt">

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/test_img" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:fontFamily="@font/amiko"
            android:text="Event Name"
            android:textColor="@color/red"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eventDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventName"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/event_image_cv"
            android:ellipsize="end"
            android:justificationMode="inter_word"
            android:maxLines="6"
            android:text="@string/lorem_sample"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/interested_button"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@id/eventDesc"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/event_image_cv"
            android:background="@drawable/ll_bg_red"
            android:fontFamily="@font/amiko"
            android:text="Intrested"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>