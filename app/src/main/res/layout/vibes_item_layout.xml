<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <VideoView
        android:id="@+id/vibes_viedoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:controller_layout_id="@layout/exoplayer_custom"
        app:show_buffering="always"
        app:use_controller="false" />

    <ProgressBar
        android:id="@+id/progressBar_Vibes"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:indeterminateTint="@color/red"
       android:layout_centerInParent="true" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:layout_marginBottom="200dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/likeButton_vibes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:src="@drawable/blank_heart"/>

        <TextView
            android:id="@+id/vibes_totalLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Like"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/comment_vibe"
            android:layout_width="30dp"
            android:visibility="gone"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/comment"/>

        <TextView
            android:id="@+id/totalComment_vibe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comment"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/moreOption_vibe"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/repot_vibe"
            app:tint="@color/red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find Support"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_margin="10dp"
      android:gravity="center_vertical">

      <de.hdodenhof.circleimageview.CircleImageView
          android:layout_width="25dp"
          android:layout_height="25dp"
          android:src="@drawable/profile_testimg"
          android:id="@+id/vibe_profileImage"/>

      <TextView
          android:id="@+id/fullName_viber"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="FullName"
          android:layout_marginStart="5dp"
          android:textSize="12sp"
          android:fontFamily="@font/amiko"
          android:textColor="@color/white"/>

  </LinearLayout>

    <TextView
        android:id="@+id/vibeCaption"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="70dp"
        android:text="Vibe Caption"
        android:textColor="@color/red" />

</RelativeLayout>